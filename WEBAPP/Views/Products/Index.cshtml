@model List<Product>
<h1>HELLO WORLD its Products  Page</h1>


@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>price</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    
                    <td> <a class="btn btn-link" asp-controller="products" asp-action="edit" asp-route-id="@product.ProductId">Edit</a> </td>
                    <td> <a class="btn btn-link" asp-controller="products" asp-action="delete" asp-route-id="@product.ProductId" onclick="return confirmDelete()">Delete</a> </td>
                </tr>
            }
        </tbody>
    </table>


}

<a class="btn btn-primary" asp-controller="products" asp-action="add">Add Product</a>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure ??")
        }
    </script>
}