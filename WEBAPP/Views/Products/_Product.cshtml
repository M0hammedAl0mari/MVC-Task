@model Product

@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="products" asp-action="@action">

    @if (action?.ToLower() == "edit")
    {
        <div class="row mb-3">
            <div class="col-6">
                <input type="number" asp-for="ProductId" class="form-control" hidden />
            </div>
        </div>
    }
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Price" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
    </div>

    



    <input type="submit" class="btn btn-primary" value="Save" />

</form>
